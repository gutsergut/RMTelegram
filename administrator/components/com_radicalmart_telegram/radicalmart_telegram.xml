<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" method="upgrade" version="5.0">
    <name>com_radicalmart_telegram</name>
    <author>Project Team</author>
    <creationDate>2025-10</creationDate>
    <version>0.1.25</version>
    <description>COM_RADICALMART_TELEGRAM_XML_DESCRIPTION</description>
    <namespace path="src">Joomla\Component\RadicalMartTelegram</namespace>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <folder>services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>

    <languages folder="site">
        <language tag="ru-RU">language/ru-RU/com_radicalmart_telegram.ini</language>
    </languages>

    <administration>
        <menu img="class:comments">COM_RADICALMART_TELEGRAM</menu>
        <submenu>
            <menu link="index.php?option=com_radicalmart_telegram&amp;view=status">COM_RADICALMART_TELEGRAM_MENU_STATUS</menu>
            <menu link="index.php?option=com_radicalmart_telegram&amp;view=links">COM_RADICALMART_TELEGRAM_MENU_LINKS</menu>
            <menu link="index.php?option=com_radicalmart_telegram&amp;view=payments">COM_RADICALMART_TELEGRAM_MENU_PAYMENTS</menu>
            <menu link="option=com_config&amp;view=component&amp;component=com_radicalmart_telegram">COM_CONFIG_GLOBAL_CONFIGURATION</menu>
        </submenu>
        <files>
            <filename>radicalmart_telegram.xml</filename>
            <filename>config.xml</filename>
            <folder>forms</folder>
            <folder>services</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>language</folder>
            <folder>sql</folder>
        </files>
        <languages>
            <language tag="en-GB">language/en-GB/com_radicalmart_telegram.ini</language>
            <language tag="en-GB">language/en-GB/com_radicalmart_telegram.sys.ini</language>
            <language tag="ru-RU">language/ru-RU/com_radicalmart_telegram.ini</language>
            <language tag="ru-RU">language/ru-RU/com_radicalmart_telegram.sys.ini</language>
        </languages>
    </administration>
</extension>
